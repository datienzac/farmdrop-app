<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Small Text View Theme -->
    <style name="AppTextViewSmall">
        <item name="android:textSize">@dimen/app_small_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Medium Text View Theme -->
    <style name="AppTextViewMedium" parent="AppTextViewSmall">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
    </style>

    <!-- Large Text View Theme -->
    <style name="AppTextViewLarge" parent="AppTextViewSmall">
        <item name="android:textSize">@dimen/app_large_text_size</item>
    </style>

</resources>
